                            <Pane styleClass="app-item,placeholder" />
                            <Pane styleClass="app-item,placeholder" />
                            <Pane styleClass="app-item,placeholder" />
                            <Pane styleClass="app-item,placeholder" />
                        </FlowPane>
                    </VBox>
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>
</VBox>
